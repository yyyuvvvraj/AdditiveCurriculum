datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @map("_id") @default(auto()) @db.ObjectId
  name          String?
  email         String?  @unique
  emailVerified DateTime?
  image         String?
  password      String?

  accounts      Account[]
  sessions      Session[]
  resetTokens   PasswordResetToken[]
}

model Account {
  id                String  @id @map("_id") @default(auto()) @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @map("_id") @default(auto()) @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @map("_id") @default(auto()) @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id         String   @id @map("_id") @default(auto()) @db.ObjectId
  tokenHash  String   // SHA-256 hash of the token we emailed
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String   @db.ObjectId
  expiresAt  DateTime
  used       Boolean  @default(false)
  createdAt  DateTime @default(now())

  @@index([tokenHash])
}

// <-- keep the top of file as-is (datasource + generator + existing models) -->

model Part {
  id           String        @id @map("_id") @default(auto()) @db.ObjectId
  partId       String        @unique                      // the external Part ID (e.g., "SP0100")
  partName     String?
  category     String?
  currentStock Int
  rop          Int?
  warningLevel Int?
  vendor       String?
  leadTimeDay  Int?
  lastUpdated  DateTime
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  histories    PartHistory[]
}

model PartHistory {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  part      Part     @relation(fields: [partRef], references: [id], onDelete: Cascade)
  partRef   String   @db.ObjectId
  stock     Int
  changeAt  DateTime @default(now())
  note      String?

  @@index([partRef, changeAt])
}
